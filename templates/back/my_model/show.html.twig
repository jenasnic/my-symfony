{% extends 'base.html.twig' %}

{% block title %}MyModel{% endblock %}

{% block body %}
    <h1>MyModel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ my_model.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ my_model.label }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ my_model.code }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ my_model.value }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ my_model.date ? my_model.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_my_model_index') }}">back to list</a>

    <a href="{{ path('back_my_model_edit', {'id': my_model.id}) }}">edit</a>

    {{ include('back/my_model/_delete_form.html.twig') }}
{% endblock %}
